<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PeruPlaces" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange</item>

        <!-- Define los colores de texto -->
        <item name="android:textColorPrimary">@color/orange</item> <!-- Para texto principal -->
        <item name="android:textColorSecondary">@color/orange</item> <!-- Para texto secundario -->

        <!-- Define los colores de fondo -->
        <item name="android:windowBackground">@color/white</item> <!-- Fondo de la ventana -->

        <!-- Define los colores de los botones -->
        <item name="android:buttonTint">@color/black</item> <!-- Para botones -->

        <!-- Define los colores de EditText -->
        <item name="android:editTextColor">@color/orange</item> <!-- Para texto de EditText -->
        <item name="colorControlNormal">@color/orange</item> <!-- Para bordes de EditText -->

        <item name="searchViewStyle">@style/CustomSearchViewStyle</item>
    </style>

    <style name="ButtonStyle">
        <!-- Color de texto del botón -->
        <item name="android:textColor">@android:color/white</item>
        <!-- Tamaño del texto -->
        <item name="android:textSize">16sp</item>
        <!-- Margen -->
        <item name="android:layout_margin">8dp</item>
        <!-- Padding -->
        <item name="android:padding">16dp</item>
        <!-- Esquinas redondeadas -->
        <item name="android:radius">8dp</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/bg_search_view</item>
    </style>

    <style name="Theme.PeruPlaces" parent="Base.Theme.PeruPlaces" />
</resources>